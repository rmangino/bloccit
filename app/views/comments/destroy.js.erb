<% if @comment.destroyed? %>
  $('#comment-' +<%= @comment.id %>).fadeOut(500, 'linear');

  <% str = pluralize(@post.comments.count, 'Comment')  %>

   <%# Update the total comment count %>
  $('#js-comments-count').text('<%= "#{str}" %>');

<% else %>

  $('#comment-' +<%= @comment.id %>).prepend("<div class='alert alert-danger'><%= flash[:error] %></div>");

<% end %>